scroll-view{
    width: 100%;
    height: 100vh;
}

.product{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid #5599ff;

}

.info{
    width: 80%;
    display: flex;
    flex-direction: column;
}

.info .price{
    color:red;
    font-size: 600;
}

.product image{
    width: 200rpx;
}

.bottom{
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
}