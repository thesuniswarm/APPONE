.container{
    display: flex;
    flex-direction: column;
    padding: 10rpx 16rpx;
    height: 100vh;
}



swiper{
    width: 100%;
    height: 370rpx;
}

swiper image{
    width: 100%;
    border-radius:18rpx;
}

/* 搜索栏 */
.search{
    border-radius: 20rpx;
    background-color: rgba(201, 192, 192, 0.849);
    
}


/* 菜单 */

.nav{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    background-color: pink;
    border-radius: 16rpx;
}

.nav .menu{
    display: flex;
    flex-direction: column;
    width: 25%;
    justify-content: center;
    align-items: center;
    margin-bottom: 10rpx;
}

.menu text{
    font-size: 20rpx;
    color: #666;
    margin-bottom: 10rpx;
}

.menu image{
    width: 100rpx;
    height:100rpx;
    border-radius: 50%;
}

.hot{
    display: block;
    text-align: center;
    margin: 10rpx 0;
}

/*产品列表*/
.wrap{
    display: flex;
    flex-wrap: wrap;
    background-color: wheat;
    background-color: #576b95;
}

.wrap .product{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 46%;
    margin: 6rpx 10rpx;
    background-color: whitesmoke;
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
}

.product image{
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
    width: 100%;
}

.info{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
}

.name{
    color: wheat;
}

.info .price{
    color: red;
}