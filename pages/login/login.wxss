/* 这是容器的样式 */
.container{
    height: 100vh;
    display: flex;
    flex-direction: column;
    padding: 30rpx;
}
/* 这是文本的样式 */
text{
    font-size: 40rpx;
    display: flex;
    justify-content: center;
}

input{
    border: 2rpx solid #336699;
    height: 90rpx;
    border-radius: 12rpx;
    padding-left: 16rpx;
}
.phone_number{
    margin: 16rpx 0;
}

.code{
    display: flex;
    flex-direction: row;
    width: 100%;
    margin-bottom: 16rpx;
}

/* 验证码输入框样式 */

.code_number{
    flex: 1;
}

.btn_code{
    background-color: #576b95;
    color: white;
    font-size: 32rpx;
}

/* 登陆按钮样式 */
.btn_login{
    background-color: #09bb07;
    color:white;
}